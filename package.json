{
  "name": "rd-plan",
  "version": "1.0.0",
  "description": "Eine Offline-App zur Planung der Rettungswagenschichten.",
  "main": "dist/main/main.js",
  "scripts": {
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "bump-build": "node ./scripts/bump-build.js",
    "build": "rm -rf dist && npm run bump-build && npm run build:main && npm run build:renderer",
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "sqlite": "^5.1.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^24.9.2",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "electron": "28.3.3",
    "electron-builder": "^24.6.0",
    "electron-packager": "^17.1.2",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.0.0",
    "vite": "^7.0.0"
  },
  "build": {
    "appId": "com.example.rdplan",
    "productName": "RD-Plan",
    "npmRebuild": false,
    "win": {
      "target": "portable"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "homepage": "https://github.com/powderk/rd-plan#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/powderk/rd-plan.git"
  },
  "keywords": [
    "electron",
    "sqlite",
    "react",
    "offline",
    "rescue"
  ],
  "author": "Benjamin Kreitz",
  "license": "AGPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/powderk/rd-plan/issues"
  }
}
