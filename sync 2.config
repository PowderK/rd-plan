# RD-Plan Sync Konfiguration
# Diese Datei kann angepasst werden um das Sync-Verhalten zu steuern

# Basis-Verzeichnisse
BASE_DIR="/Users/benni/Documents/RD-Plan"
DEV_DIR="rd-plan"
BETA_DIR="rd-plan-beta"

# Git-Einstellungen
GIT_REMOTE="origin"
GIT_BRANCH="main"
GITHUB_REPO="https://github.com/powderk/rd-plan.git"

# Sync-Einstellungen
# Dateien/Verzeichnisse die synchronisiert werden sollen
SYNC_INCLUDE=(
    "src/"
    "public/"
    "package.json"
    "package-lock.json"
    "tsconfig.json"
    "tsconfig.renderer.json" 
    "vite.config.ts"
    "scripts/"
    "dist/"
    ".gitignore"
    "README.md"
)

# Dateien/Verzeichnisse die NICHT synchronisiert werden
SYNC_EXCLUDE=(
    ".git"
    "node_modules"
    "*.log"
    ".DS_Store"
    "*.db"
    "*.sqlite"
    "temp"
    "tmp"
    ".env"
    ".env.local"
)

# Build-Einstellungen
BUILD_COMMAND="npm run build"
BUILD_CHECK_COMMAND="npm run build --dry-run"

# Backup-Einstellungen
BACKUP_ENABLED=true
BACKUP_DIR="backups"
BACKUP_RETENTION_DAYS=30

# Changelog-Einstellungen
CHANGELOG_ENABLED=true
CHANGELOG_FILE="CHANGELOG.md"
CHANGELOG_AUTO_UPDATE=true

# Git-Einstellungen
AUTO_COMMIT=true
AUTO_TAG=true
AUTO_PUSH=true
TAG_PREFIX="v"

# Benachrichtigungen
NOTIFICATION_ENABLED=false
NOTIFICATION_WEBHOOK=""

# Entwicklungs-Modi
DEBUG_MODE=false
DRY_RUN=false
VERBOSE=false

# Validierung
VALIDATE_BUILD=true
VALIDATE_TESTS=false
VALIDATE_LINT=false

# Hooks (werden vor/nach dem Sync ausgef√ºhrt)
PRE_SYNC_HOOK=""
POST_SYNC_HOOK=""
PRE_COMMIT_HOOK=""
POST_COMMIT_HOOK=""